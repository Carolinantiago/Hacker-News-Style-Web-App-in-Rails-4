<%@links.each_with_index do |link, index| %>
  <div class="link row clearfix">
    <h2 class="title">
      <%= link_to link.title, link %><br>
      <small class="author" id="so_este_<%=index%>">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.try(:name) %></small>
    </h2>

    <div class="btn-group">
      <a class="btn btn-default btn-sn" href="<%= link.url %>">Visit Link</a>
      <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sn" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sn" do %>
        <span class="glyphicon glyphicon-chevron-up">
        Downvote
        <%= link.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>
